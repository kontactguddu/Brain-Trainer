<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Level_Selection">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#000000">

    <TextView
        android:id="@+id/brainTrainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Brain Trainer"
        android:textColor="#fcd500"
        android:layout_weight="1"
        android:textSize="60dp"
        android:textAlignment="center"
        android:textStyle="bold" />

        <Button
            android:id="@+id/warmupBtn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="40sp"
            android:onClick="warmup"
            android:text="Warmup" />

        <Button
            android:id="@+id/easyBtn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="40sp"
            android:onClick="easy"
            android:text="Easy" />

        <Button
            android:id="@+id/mediumBtn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="40sp"
            android:onClick="medium"
            android:text="Medium" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="40sp"
            android:text="Hard" />

        <Button
            android:id="@+id/tough"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="40sp"
            android:text="Tough" />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>